#!/bin/sh

cd /opt/ltsp/images/

if test -e CKSUMS; then rm  CKSUMS;fi
touch CKSUMS

for N in $(ls ltsp-amxa*img); do
  if  ! test -e $N.cksum; then
    echo -n "generating $N.cksum ..."
    cksum $N >$N.cksum
    echo "ok"
  fi
  cat $N.cksum >>CKSUMS
done

cd rdiffs

for N in $(ls ltsp-amxa*rdiff); do
  if  ! test -e $N.cksum; then
    echo -n "generating $N.cksum ..."
    cksum $N >$N.cksum
    echo "ok"
  fi
  cat $N.cksum >>../CKSUMS
done

exit
