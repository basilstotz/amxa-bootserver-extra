#!/bin/sh
# postinst script for amxa-bootserver-extra
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <postinst> `configure' <most-recently-configured-version>
#        * <old-postinst> `abort-upgrade' <new version>
#        * <conflictor's-postinst> `abort-remove' `in-favour' <package>
#          <new-version>
#        * <postinst> `abort-remove'
#        * <deconfigured's-postinst> `abort-deconfigure' `in-favour'
#          <failed-install-package> <version> `removing'
#          <conflicting-package> <version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package


case "$1" in
    configure)
      #patch puavo-bootserver-sync-images
      if test -e /usr/sbin/puavo-bootserver-sync-images; then
        sed -i /usr/sbin/puavo-bootserver-sync-images -e's/http.ca_file = .*$//g'
        sed -i /usr/sbin/puavo-bootserver-sync-images -e's/http.verify_mode = OpenSSL::SSL::VERIFY_PEER$//g'
      fi
      if test -e /etc/cron.d/puavo-bootserver-sync-images; then
        if cat /etc/cron.d/puavo-bootserver-sync-images|grep -q -v url\ https; then
          sed -i  /etc/cron.d/puavo-bootserver-sync-images -e's#--quiet puavo-bootserver-sync-images#--quiet puavo-bootserver-sync-images --url https://images.amxa.ch/meta/ltsp-amxa-trusty-i386.json#g'    
        fi
      fi
    ;;

    abort-upgrade|abort-remove|abort-deconfigure)
    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
