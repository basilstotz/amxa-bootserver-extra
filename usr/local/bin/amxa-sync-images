#!/bin/sh

DST="/opt/ltsp/images/downloads/"
SRC="/home/images/"
ID="/root/yourfilehere"

if test -e /tmp/amxa-sync; then 
   echo "allready running. exiting..."
   exit; 
fi
touch /tmp/amxa-sync

rm /opt/ltsp/images/rdiffs/*

while ! rsync -r -v -P --bwlimit 1024 --delete -e "ssh -i $ID" root@hadar.amxa.ch:$SRC $DST; do
  sleep 1200
done

rm /tmp/amxa-sync

exit

